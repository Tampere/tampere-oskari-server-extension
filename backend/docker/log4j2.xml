<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="error" strict="false" name="OskariLogConfig">
    <Properties>
        <Property name="LOG_DIR">/log/</Property>
    </Properties>
    <Appenders>
        <RollingFile name="File" fileName="${LOG_DIR}/oskari.log"
                     filePattern="${LOG_DIR}/oskari.log.%d{yyyy-MM-dd}">
            <PatternLayout pattern="%d %-5p %c - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
            </Policies>
            <DefaultRolloverStrategy max="90"/>
        </RollingFile>
        <RollingFile name="ACCESS" fileName="${LOG_DIR}/layers.log"
                     filePattern="${LOG_DIR}/layers.log.%d{yyyy-MM-dd}">
            <!-- timestamp + " - " + message + newline -->
            <PatternLayout pattern="%d - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
            </Policies>
            <DefaultRolloverStrategy max="90"/>
        </RollingFile>
        <Console name="CONSOLE">
            <PatternLayout pattern="%d %-5p %c - %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <!-- migrations -->
        <Logger name="org.flywaydb" level="warn"/>
        <!-- db/mybatis -->
        <Logger name="com.ibatis" level="warn"/>
        <!-- connection pool -->
        <Logger name="com.zaxxer.hikari" level="warn"/>
        <!-- scheduler -->
        <Logger name="org.quartz" level="warn"/>
        <!-- commons? -->
        <Logger name="org.apache" level="warn"/>
        <!-- oskari -->
        <Logger name="fi.mml" level="info"/>
        <Logger name="fi.nls" level="info"/>
        <Logger name="org.oskari" level="info"/>

        <Logger name="ACCESS" level="info" additivity="true">
            <AppenderRef ref="ACCESS"/>
        </Logger>
        <Root level="info">
            <AppenderRef ref="File"/>
            <AppenderRef ref="CONSOLE"/>
        </Root>
    </Loggers>
</Configuration>